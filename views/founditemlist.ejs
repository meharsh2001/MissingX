<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MissingX -Jims Rohini</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
   </head>
   <body onload="loading()">
    <div id="loading"></div>
  <% include ./partials/header.ejs %>
<div class="img4"><div class="row">
    <div class="container">
        <div class="topPart">
            <div class="searchbar">
                <form id="contact-form" method="POST" role="form">
                    <input id="form_name" type="text" name="item" class="form-control" placeholder="Please Enter Item Name*" required="required" data-error="Item name is required.">
                    <label for="form_name"></label>                   
                    <a href="/"><br><li  class=" btn btn-default col-xs-1 col-sm-1 col-md-1 col-lg-1"><i class="fa fa-backward" aria-hidden="true">Go Back</i></li></a>           
                 <div href="/thanks" >   <button class="btn btn-default btn-primary col-xs-1 col-sm-1 col-md-1 col-lg-1">Search</button></div></form>
    </div>
</div>
    <div class="table-item-lost">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Founder Name</th>
                    <th>Location</th>
                    <th>Specifications</th>
                    <th>Item Handler</th>
                    <th>View Details</th>
                </tr>
            </thead>
                <tbody>
                    
                           <tr><%foundslist.forEach(found=>{%>
                            <td>    <p><%=found.item%>      </p></td>
                            <td>    <p><%=found.name%>      </p></td>
                            <td>    <p><%=found.location%>  </p></td>
                            <td>    <p><%=found.specifications%></p> </td>                            
                            <td>    <p><%=found.care%>      </p></td>
                            <td class="dynamicWidth btn btn-default btn-lg" ><form  method="GET">
                                <a href="/claim">Claim A Item</a>
                            </form>
                            </td>
                        </tr><%})%>    
                </tbody>
        </table>
    </div>
     </div>
    
        <% include ./partials/footer.ejs %>
    <script>
  var preloader = document.getElementById('loading'); 
  function loading() {
    preloader.style.display ='none';
  }
</script>
</body>
