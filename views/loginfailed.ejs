<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
<link rel="stylesheet" href="style.css"> 
<body onload="loading()">
    <div id="loading"></div>
<% include partials/header %>

<div class="container">
    <div class="row ">
        <div class="thumbnail login-padding">
            <h1 style="text-align:center;"> Login </h1>
            <div style="width:50%; margin: 25px auto">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="username">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="password">
                    </div><br>
                    <div class="form-group">
                        <button class="btn btn-default btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <h5 style="color: red;">**The details you entered is not connected to any account. Contact Customer Care Or Register Below.</h5>

                <a class="btn btn-default btn-primary btn-block" href="/register">Register Here</a>
            </div>
        </div>
        
    </div>
    
</div>

<div class="bg-warning">       
    <% include ./partials/footer.ejs %></div> 
    <script>
        var preloader = document.getElementById('loading'); 
        function loading() {
          preloader.style.display ='none';
        }
      </script>
      </body> 
